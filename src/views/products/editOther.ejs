<%- include ('../modules/head') %> 

<body>

<%- include ('../modules/header') %> 

    <main>

        <section id="editProduct">

        <h2 class="titulos">Actualizar <%= products.name %> </h2>
        <form action="/products/other/<%=products.id%>?m=PUT" id="creationForm" method="POST">
          
            <fieldset id="type_id">
                <legend>Tipo de producto</legend>
                <input class="hidden radio-label" id="beverage" type="radio" name="type_id" value="1" <%= products.type_id == "1"? "checked" : null %>>
                <label class="button-label" for="beverage">Bebidas</label>
                <input class="hidden radio-label" id="food" type="radio" name="type_id" value="2" <%= products.type_id == "2"? "checked" : null %>> 
                <label class="button-label" for="food">Alimento</label>
                <input class="hidden radio-label" id="combo" type="radio" name="type_id" value="3" <%= products.type_id == "3"? "checked" : null %>>
                <label class="button-label" for="combo">Combo</label>
                <small></small>
                <% if (locals.errors && errors.type_id) { %>
                    <p class="errores"><%= errors.type_id.msg %> </p>
                <% } %>
            </fieldset>
        
        
            <fieldset class="fieldNuevo">
                <label for="name"><input type="text" name="name" class="cajaNuevo" placeholder="Nombre" id="productName" value="<%= products.name %>" >
                <span>Nombre</span>
                </label>
                <small></small>
                <% if (locals.errors && errors.name) { %>
                    <p class="errores"><%= errors.name.msg %> </p>
                <% } %>
            </fieldset>
        
            <fieldset class="fieldNuevo">
                <label for="description"><input type="text" name="description" class="cajaNuevo" id="productDesc" placeholder="Descripción"  value="<%= products.description %>">
                <span>Breve descripción</span>
                <small></small>
                <% if (locals.errors && errors.description) { %>
                    <p class="errores"><%= errors.description.msg %> </p>
                <% } %>
                </label>
                
            </fieldset>
        
            <fieldset class="fieldNuevo">
                <legend>Precio</legend>
                <label for="price"><input type="text" name="price" class="cajaNuevo" id="productPrice" placeholder="Precio" value="<%= products.price %>" >
                <span>Precio</span>
                </label>
                <small></small>
                <% if (locals.errors && errors.price) { %>
                    <p class="errores"><%= errors.price.msg %> </p>
                <% } %>
            </fieldset>
        
                       
                
          

                        <fieldset class="botonNuevo">
                            
                            <button type="reset" class="reset">Cancelar</button> 
                            <button type="submit" class="enviar">Guardar</button>
                        </fieldset>

        </form>




                


            <!-- </form> -->
        </section>
        <script src="/js/validateEditOther.js" type="text/javascript"></script> 
    </main>


    <%- include ('../modules/footer') %>
    
    </body>
    </html>