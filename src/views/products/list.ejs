<%- include ('../modules/head') %> 

<body>

<%- include ('../modules/header') %> 

<!--Sección MAIN-->
<main>

<% if (locals.products) { %>
    <% if (products.length > 0) { %>
     
    <section id="list-movie">
    <article >
        <% products.forEach(product => { %>
            <h2> Item número <%= product.id %>: <%= product.productName %>  </h2>
            <figure  class="images-list">
                <a href="/products/<%= product.id %>" title="<%= product.productName %>"><img src="/uploads/<%= product.createImage.url %>"></a>
                   
            </figure>
            <% if (user && user.isAdmin) { %>
             
            
            <section id="iconitos">
                <form action="/products/?m=DELETE" method="post">
                    <input type="hidden" name="id" value=<%= product.id %>>
                    <button type="submit" title="Eliminar">
                        <i class="fas fa-trash"> </i>
                    </button>
                </form>
                <a href="/products/<%= product.id %>/edit" title="Editar elemento"> <i class="fas fa-pencil-alt"> </i> </a>
            </section>
            <% } %>
        <% }) %>
    </article>
        <% } else { %>
            <h2>No hay productos</h2>
        <% } %> 
    <% } else { %>
        <h2>No hay productos</h2>
    <% } %> 
    

</section>

</main>

<%- include ('../modules/footer') %>

</body>
</html>