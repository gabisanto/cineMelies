<%- include ('../modules/head') %> 

<body>

<%- include ('../modules/header') %> 

<main>

    <section id="profileMain">

        <h1 class="titulos">Mi perfil</h1>

        <section class="tarjetaPerfil">
            <% if (user.avatar != null) { %>
                <figure class="figureAvatar">
                    <img src="../../../uploads/avatars/<%= user.avatar %>" alt="avatar <%= user.email %>" class="avatar">
                </figure>
            <% } else { %>
                <figure class="figureAvatar">
                    <img src="/img/000000000000.jpg" alt="avatar <%= user.email %>" class="avatar">
                </figure>
            <% } %>
            

            <article class="usuario">
                <p class="datos">
                    Nombre: <%= user.name %> 
                    <br>
                    Fecha de nacimiento: <%= user.birthDate %> 
                    <br>
                    DNI: <%= user.document %> 
                    <br>
                    E-mail: <%= user.email %> 
                    <br>
                    <form action="/users/upload/avatar" enctype="multipart/form-data" method="post" class="formAvatar">
                        <input type="file" name="imagenUsuario" id="imagenUsuario" hidden/>
                        <label for="imagenUsuario" class="avatarLabel">Cambiar avatar</label>
                        <button type="submit" id="uploadImage"><i class="fa-solid fa-arrow-up-from-bracket"></i></button>
                    </form>
                </p>
            </article>

        </section>

        <% if (user && user.admin) { %>
            
         
            <section class="tarjetaPerfil">

                <figure id="panelFigure">
                    <img src="/img/work-from-home-3.png" alt="" class="panelAvatar">
                </figure>
    
                <article class="panelOpciones">
                    <p class="datos">
                        <p>Panel de control</p>
                        <br>
                        
                        <a href="/users/">Lista de usuarios</a>
                        <br>
                        <a href="/products/">Lista de películas</a>
                        <br>
                        <a href="/products/other">Lista de productos</a>
                        <br>
                        <a href="/products/create">Crear nueva película</a>
                        <br>
                        <a href="/products/other/create">Crear nuevo producto</a>
                        <br>
                        <br>
                    </p>
                </article>
    
            </section>

            <% } %>

        <form action="/users/logout" method="post">
            <fieldset class="botonNuevo">
                <button type="submit" class="enviar">logout</button> 
            </fieldset>
        </form>

    </section>


</main>


<%- include ('../modules/footer') %>

</body>
</html>
